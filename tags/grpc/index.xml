app: server
spec:
containers:
- name: server
image: mailserver
ports:
- containerPort: 50051
env:
- name: GMAIL_ACC
valueFrom:
secretKeyRef:
name: gmail-acc
key: env
- name: GMAIL_PASS
valueFrom:
secretKeyRef:
name: gmail-pass
key: env
&lt;/code>&lt;/pre>&lt;pre tabindex="0">&lt;code class="language-kubernetes" data-lang="kubernetes">kind: Service
apiVersion: v1
metadata:
name: client
spec:
